---
import Layout from '../layouts/Layout.astro';
---
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cantarell:wght@700&display=swap" rel="stylesheet">

<Layout title="Angribblez">
	<main>
		<div id="content">
			<div id="info_container">
				<div id="info_content">
					<div id="name_div">
						<h3>Angribblez</h3>
					</div>
					<div id="profile_div">
						<img id="profile_image" src="https://avatars.githubusercontent.com/u/41252995">
					</div>
					<div id="about_div">
						<h2 id="about_title">About me</h2>
						<p id="about_text">
							My name is Angribblez, I am a highschool junior in New Mexico. I am interested in almost anything involving low level, embedded, robotic, or emulation. I currently working as lead programmer for my robotics team, and preparing for a programming competition. I programmed this site using the Astro framework.
						</p>
					</div>
					<div id="tools_div">
						<h2 id="tools_text">Known tools</h2>
						<div id="tools_lists_div">
							<ul>
								<li>Rust</li>
								<li>C/C++</li>
								<li>C#</li>
								<li>Java</li>
								<li>Python</li>
							</ul>
							<ul>
								<li>Node JS</li>
								<li>Lua</li>
								<li>Javascript</li>
								<li>HTML</li>
								<li>CSS</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div id="projects_container">
				<div class="projects_row">
					<div class="projects_square">

					</div>
					<div class="projects_square"></div>
					<div class="projects_square"></div>
				</div>
				<div class="projects_row">
					<div class="projects_square"></div>
					<div class="projects_square"></div>
					<div class="projects_square"></div>
				</div>
				<div class="projects_row">
					<div class="projects_square"></div>
					<div class="projects_square"></div>
					<div class="projects_square"></div>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style>
	#content {
		display: flex;
		position: absolute;
		top: 0;
		left: 0;
		margin: 0;
		padding: 0;
		border: 0;
		width: 100vw;
		height: 100vh;
		background-color: #14110F;
	}
	#info_container {
		display: flex;
		position: absolute;
		top: 6%;
		left: 3.625%;
		width: 25%;
		height: 88%;
		opacity: 95%;
		background-color: #363636;
		border-width: 100%;
		border-color: white;
		border-style: solid;
		border-radius: 3vw;
	}
	#info_content {
		display: flex;
		position: relative;
		top: 5%;
		left: 10%;
		width: 80%;
		height: 90%;
		flex-direction: column;
	}
	#name_div {
		display: flex;
		height: 7.5%;
		width: 100%;
		justify-content: center;
		align-items: center;
		font-family: 'Cantarell', sans-serif;
		font-size: 30px;
		color: white;
	}
	#profile_div {
		height: 35%;
	}
	#profile_image {
		position: relative;
		top: 5%;
		left: 5%;
		height: 90%;
		width: 90%;
		clip-path: circle();
		object-fit: contain;
	}
	#about_div {
		display: flex;
		flex-direction: column;
		height: 25%;
		width: 100%;
	}
	#about_title {
		margin-top: 1%;
		height: 1%;
		font-family: 'Cantarell', sans-serif;
		font-size: 22px;
		color: white;
	}
	#about_text {
		font-family: 'Cantarell', sans-serif;
		font-size: 15px;
		color: white;
	}
	#tools_div {
		display: flex;
		flex-direction: column;
		height: 35%;
		width: 100%;
	}
	#tools_text {
		height: 1%;
		font-family: 'Cantarell', sans-serif;
		font-size: 22px;
		color: white;
	}
	#tools_lists_div {
		display: flex;
		height: 90%;
	}
	#tools_lists_div ul {
		width: 40%;
		height: 80%;
		float: left;
		font-family: 'Cantarell', sans-serif;
		font-size: 16px;
		color: white;
	}
	#projects_container {
		display: flex;
		position: relative;
		flex-direction: column;
		top: 6%;
		left: 32.25%;
		width: 64.125%;
		height: 88%;
		overflow-y: scroll;
	}
	.projects_row {
		display: flex;
		height: 50%;
		min-height: 50%;
		width: 100%;
		align-items: center;
	}
	.projects_square {
		position: relative;
		margin-left: auto;
		margin-right: auto;
		height: 80%;
		width: 25%;
		background-color: #363636;
		border-width: 100%;
		border-color: white;
		border-style: solid;
		border-radius: 3vw;
	}
	#projects_container::-webkit-scrollbar {
		width: 10px;
	}
	#projects_container::-webkit-scrollbar-track {
		box-shadow: inset 0 0 5px grey; 
		border-radius: 10px;
	}
	#projects_container::-webkit-scrollbar-thumb {
		background: #363636; 
		border-width: 3px;
		border-style: solid;
		border-color: white;
		border-radius: 10px;
	}
	#projects_container::-webkit-scrollbar-thumb:hover {
		background: #262626; 
	}
</style>
